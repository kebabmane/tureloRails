<div id="blue">
		<div class="container">
		<div class="row">
			<h3><%= @user.nickname %>
        <div class="pull-right">
					<% if user_signed_in? %>
						<%= link_to 'edit your profile', edit_users_profile_path(@user), :class=>"btn btn-primary"  %>
					<% end %>
        </div>
      </h3>
		</div><!-- /row -->
		</div> <!-- /container -->
</div><!-- /blue --><br><br>

<div class="container">

	<div id="post_content">
			<div class="media">
				 <a class="pull-left" href="#">
			   		 <%= gravatar_tag @user.email, :size => "150x150", :html => { :class => "img-circle" } %>
				 </a>
			</div>
	<br><br>
</div>


<% if @followed_feeds.any? %>

<div class="blog container">
   <div id="pins" class="blog-list">
			<% @followed_feeds.each do |feed| %>
				<%= render partial: "feeds/feed", locals: {feed: feed} %>
			<% end %>
   </div>


	<br><br><br><br><br><br>
</div>



<% else %>

 <%= render 'layouts/no_data' %>

<% end %>

</div>
