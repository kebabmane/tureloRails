  <br><br><br>
  <div class="container">
    <div class="omb_login">
      	<h2 class="text-center">finalise invitation</h2>
        <h3 class="text-center">i mean, if you feel like it</h3><br><br>
      <%= bootstrap_form_for(resource, as: resource_name, url: invitation_path(resource_name), inline_errors: false) do |f| %>
      <%= devise_error_messages! %>

      <%= f.hidden_field :invitation_token %>

      <div class="row omb_row-sm-offset-3">
      	<div class="col-xs-4 col-sm-3">
          <div class="input-group">
         <span class="input-group-addon"><i class="fa fa-user"></i></span>
  	  		<%= f.text_field :first_name, hide_label: :true, class: "input-lg", placeholder:  "first name", required: true %>
  	   	</div>
  </div>

         <div class="col-xs-4 col-sm-3">
           <div class="input-group">
          <span class="input-group-addon"><i class="fa fa-user"></i></span>
  	  		<%= f.text_field :last_name, hide_label: :true, class: "input-lg", placeholder:  "last name", required: true %>
         </div>
  	  	</div>

      </div>

  <br>
        <div class="row omb_row-sm-offset-3">
  		<div class="col-xs-12 col-sm-6">
  		 <form class="omb_loginForm" action="" autocomplete="off" method="POST">
  		    <div class="input-group">
  		 	<span class="input-group-addon"><i class="fa fa-envelope-o"></i></span>
  		    <%= f.email_field :email, hide_label: :true, class: "input-lg", placeholder:  "email address", required: true %>
  		    </div>
  		    <span class="help-block"></span>
  		    <div class="input-group">
  				<span class="input-group-addon"><i class="fa fa-user"></i></span>
        			<%= f.text_field :nickname, hide_label: :true, class: "input-lg", placeholder:  "nickname", required: true %>
        		</div>
        		<span class="help-block"></span>
        	    <div class="input-group">
        	    <span class="input-group-addon"><i class="fa fa-lock"></i></span>
        		<%= f.password_field :password, hide_label: :true, class: "input-lg", placeholder:  "password", required: true %>
        		</div>
        		<span class="help-block"></span>
        		<div class="input-group">
        	    <span class="input-group-addon"><i class="fa fa-lock"></i></span>
        		<%= f.password_field :password_confirmation, hide_label: :true, class: "input-lg", placeholder:  "password confirmation", required: true %>
        		</div>
        		<span class="help-block"></span><br>
        		<span class="help-block text-center">by clicking sign up, you agree to our terms and that you have read our data use policy, including our cookie use.</span>
            <br>  <%= f.submit 'sign up', class: "btn btn-lg btn-primary btn-block", data: {disable_with: "<i class='fa fa-spinner fa-spin'></i> hold tight...."}  %>

            </form>
             </div>
        </div>
     <% end %>
    </div>
  </div>
  <br>
