<%= content_for :page_title do %> | categories admin <% end %>

<br><br>

<div class="mdl-grid center-items">
<table class="mdl-data-table mdl-js-data-table mdl-data-table--selectable mdl-shadow--2dp">
<thead>
 <tr>
  <th>category</th>
  <th>created at</th>
  <th colspan="2">Actions</th>
 </tr>
</thead>
<tbody>
  <% @categories.each do |category| %>
  	<%= render partial: 'table_row', locals: {category: category} %>
  <% end %>
</tbody>
</table>
</div>
<div class="text-center">
	<%= will_paginate @categories %>
</div>

<!-- Colored FAB button with ripple -->
<div class="fab">
<button id="show-form" class="mdl-button mdl-js-button mdl-button--fab mdl-js-ripple-effect mdl-button--colored">
  <i class="material-icons">add</i>
</button>
</div>

<dialog class="mdl-dialog">
	<%= render 'form', modal: true %>
</dialog>

<script>
	var dialog = document.querySelector('dialog');
	var showDialogButton = document.querySelector('#show-form');
	if (! dialog.showModal) {
		dialogPolyfill.registerDialog(dialog);
	}
	showDialogButton.addEventListener('click', function() {
		dialog.showModal();
	});
	dialog.querySelector('.close').addEventListener('click', function() {
		dialog.close();
	});
</script>
