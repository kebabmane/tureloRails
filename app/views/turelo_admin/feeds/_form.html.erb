<%= simple_form_for(@feed, :url => turelo_admin_feeds_path) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.label :feed_url, "Feed URL" %><br />
    <%= f.input :feed_url, label: false %>
  </div>

  <div class="field">
    <%= f.label :tag_list, "Tags (separated by commas)" %><br />
    <%= f.input :tag_list, label: false %>
  </div>

  <div class="field">
     <%= f.collection_select :category, Category.order(:category_name),:id,:category_name, include_blank: true %>
  </div>

  <%= f.hidden_field :user_id %>

  <div class="form-actions">
    <%= f.button :submit, :class=>"btn btn-primary" %>
  </div>
<% end %>
