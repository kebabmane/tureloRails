<%= form_for(@feed, :url => turelo_admin_feeds_path) do |f| %>
<dialog class="mdl-dialog">
<h4 class="mdl-dialog__title">Add new feed</h4>
<div class="mdl-dialog__content">
  <div class="mdl-textfield mdl-js-textfield">
    <%= f.text_field :feed_url, class: 'mdl-textfield__input' %>
    <label class="mdl-textfield__label" for="feed_url">Feed URL</label>
  </div>
  <div class="mdl-textfield mdl-js-textfield">
    <%= f.text_field :tag_list, class: 'mdl-textfield__input' %>
    <label class="mdl-textfield__label" for="tag_list">tag list</label>
  </div>
  <div class="mdl-selectfield mdl-js-selectfield">
    <%= f.collection_select :category_id, Category.all, :id, :category_name, {prompt: "Select a category"}, {class: "mdl-selectfield__select"} %>
  </div>
  <%= f.hidden_field :user_id %>
</div>
<div class="mdl-dialog__actions">
    <%= f.submit "submit", :action => :create, :class=>"mdl-button" %>
    <button type="button" class="mdl-button close">Close</button>
</div>
</dialog>
<% end %>
