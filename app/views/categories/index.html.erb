<%= content_for(:page_title, " | categories") %>
<% if @categories.any? %>

<div class="blog container">

		<div class="row">
				<div id="pins" class="blog-list">
					<% @categories.each do |category| %>
						<% cache category do %>
							<%= render category %>
						<% end %>
					<% end %>
        </div>
    </div>


<div id="infinite-scrolling">
	<%= will_paginate @categories %>
</div>
</div>

<br><br><br><br><br><br>

<% else %>

 <%= render 'layouts/no_data' %>

<% end %>
