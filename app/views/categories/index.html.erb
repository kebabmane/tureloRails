<% if @categories.any? %>

<div class="card-columns">
		<% @categories.each do |category| %>
				<% cache category do %>
	  				<%= render category %>
				<% end %>
		<% end %>
</div>

<div id="infinite-scrolling">
	<%= will_paginate @categories %>
</div>


<% else %>

 <%= render 'layouts/no_data' %>

<% end %>
