<div id="blue">
		<div class="container">
		<div class="row">
			<h3>your subscribed feeds
				<div class="pull-right">
	 				<%= link_to 'new feed', new_feed_path, :remote => true, "data-toggle" => "modal", "data-target" => "#new_feed_modal", :class=>"btn btn-primary" %>
	      </div>
			</h3>
		</div><!-- /row -->
		</div> <!-- /container -->
</div><!-- /blue -->


<div class="row">
	<div class="col-lg-3">
	</div>
<div class="col-lg-6">
<div id="custom-search-input">
	<%= form_tag feeds_path, method: :get do %>
		<div class="input-group col-md-12">
<%= text_field_tag :search, params[:query], class: "form-control input-lg", :placeholder => "search for feeds", id: "query-recipe", autocomplete: "off" %>
	<span class="input-group-btn">
		<%= button_tag(html: {class: "btn btn-default"}) do %>
			<i class="icon ion-ios-search nav-icon"></i>
		<% end %>
	</span>
<% end %>
		</div>

</div>
</div>
</div>

<% if @feeds.any? %>

<br><br>
<div class="blog container">

		<div class="row">
				<div id="blog-mansonry" class="blog-list">
			  <% @feeds.each do |feed| %>
	<article class="post col-md-4 col-sm-6 col-xs-12">
								<div class="post-inner">
										<figure class="post-thumb">
											<div class="item">
												<%= image_tag(feed.feed_entries.order('published desc').first.feed_entry_images.first.img_url, :size => "400x300", :class => "img-responsive") rescue nil %>
											</div>
									</figure>
							<div class="content">
									<h3 class="post-title"><%= link_to feed.feed_name, feed_feed_entries_path(feed.id) %></h3>
										<div class="post-entry">
											<p>this feed has <%= feed.feed_entries_count %> entries</p>
						   			</div>
									<div class="meta">
											<ul class="meta-list list-inline">
												<li class="post-time post_date date updated">Updated <%= time_ago_in_words(feed.feed_entries.last.published) rescue nil %> ago</li>
							   			</ul><!--//meta-list-->
											<div class="feed-<%= feed.id %>">
											<% if current_user.follows?(feed) %>
												<%= button_to "unfollow", unfollow_path(feed: feed) , remote: true, method: :get , :class => 'btn btn-primary btn-sm' %>
											<% else %>
												<%= button_to "follow", follow_path(feed: feed) , remote: true, method: :get , :class => 'btn btn-primary btn-sm' %>
											<% end %>
									  	</div>
									</div><!--meta-->
							</div><!--//content-->
					</div><!--//post-inner-->
					</article>

  <% end %>
</div>
</div>

<%= will_paginate @feeds, renderer: BootstrapPagination::Rails %>
</div>

<% else %>

 <%= render 'layouts/no_data' %>

<% end %>

<div class="modal fade" id="new_feed_modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="myModalLabel">add new feed</h4>
      </div>
      <div class="modal-body">
        <%# Render the new person form (passing modal => true to enable remote => true) %>
        <%= render 'form', modal: true %>
      </div>
    </div>
  </div>
</div>
</div>
</div>
