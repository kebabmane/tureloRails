<div class="mdl-layout mdl-layout-login mdl-color--grey-100">
	<main class="mdl-layout__content mdl-layout-login__content">
		<div class="mdl-card mdl-shadow--6dp">
			<div class="mdl-card__title mdl-color--primary mdl-color-text--white">
				<h2 class="mdl-card__title-text">turelo</h2>
			</div>
      <%= form_for(resource, as: resource_name, :url => session_path(resource_name)) do |f| %>
	  	<div class="mdl-card__supporting-text">
					<div class="mdl-textfield mdl-js-textfield">
            <%= f.text_field :login, :autofocus => true, :value => '', class: 'mdl-textfield__input' %>
						<label class="mdl-textfield__label" for="username">Username / Email</label>
					</div>
					<div class="mdl-textfield mdl-js-textfield">
            <%= f.password_field :password, class: 'mdl-textfield__input' %>
						<label class="mdl-textfield__label" for="userpass">Password</label>
					</div>
			</div>
			<div class="mdl-card__actions mdl-card--border">
        <%= f.button 'login', :class => 'mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect' %>
			</div>
      <% end %>
		</div>
	</main><br>
  <div class="text-center">
    <%= render "devise/shared/links" %>
  </div>
</div>
