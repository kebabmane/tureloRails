

<div class="container vertical-center">
      <div class="omb_login">
  <h3 class="omb_authTitle">login or <%= link_to "sign up", new_user_registration_path %></h3>
<div class="row omb_row-sm-offset-3 omb_socialButtons">
      <div class="col-xs-4 col-sm-2">
        <a href="#" class="btn btn-lg btn-block omb_btn-facebook-na" data-toggle="tooltip" data-placement="top" title="Coming soon!">
          <i class="fa fa-facebook visible-xs"></i>
          <span class="hidden-xs">Facebook</span>
        </a>
      </div>
      <div class="col-xs-4 col-sm-2">
        <a href="#" class="btn btn-lg btn-block omb_btn-twitter-na" data-toggle="tooltip" data-placement="top" title="Coming soon!">
          <i class="fa fa-twitter visible-xs"></i>
          <span class="hidden-xs">Twitter</span>
        </a>
      </div>
      <div class="col-xs-4 col-sm-2">
        <a href="#" class="btn btn-lg btn-block omb_btn-google-na" data-toggle="tooltip" data-placement="top" title="Coming soon!">
          <i class="fa fa-google-plus visible-xs"></i>
          <span class="hidden-xs">Google+</span>
        </a>
      </div>
</div>

<div class="row omb_row-sm-offset-3 omb_loginOr">
  <div class="col-xs-12 col-sm-6">
    <hr class="omb_hrOr">
    <span class="omb_spanOr">or</span>
  </div>
</div>


<%= bootstrap_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

		<div class="row omb_row-sm-offset-3">
			<div class="col-md-6">
			    <form class="omb_loginForm" action="" autocomplete="off" method="POST">
					<div class="input-group">
						<span class="input-group-addon"><i class="fa fa-user"></i></span>
						 <%= f.text_field :login, hide_label: :true, class: "input-lg", autofocus: true, placeholder:  "email or username" %>
            </div>
					<span class="help-block"></span>

				<div class="input-group">
						<span class="input-group-addon"><i class="fa fa-lock"></i></span>
						<%= f.password_field :password, hide_label: :true, class: "input-lg", autocomplete: "off", placeholder:  "password" %>
					</div>

<br>

					<%= f.button "log in", class: "btn btn-lg btn-primary btn-block" %>
				</form>
			</div>
    	</div>

				<br>
                  <div class="text-center">
                  <%= render "devise/shared/links" %>

	</div>

<% end %>

        </div>



  </div>      <br><br><br>
