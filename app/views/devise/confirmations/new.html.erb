<h2 class="text-center">resend confirmation instructions</h2>
<h3 class="text-center">look i'm not saying we forgot about you, but...</h2>

<br><br><br>


<div class="container">
    <div class="omb_login">
<%= bootstrap_form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post }) do |f| %>

<div class="row omb_row-sm-offset-3">
<% if resource.errors.any? %>
  <div id="error_explanation" class="text-center">
    <h4>so we have no idea who you are, do you know who you are?</h4>
  </div>
<% end %>
</div>


		<div class="row omb_row-sm-offset-3">
			<div class="col-xs-12 col-sm-6">
			    <form class="omb_loginForm" action="" autocomplete="off" method="POST">
					<div class="input-group">
						<span class="input-group-addon"><i class="fa fa-envelope-o"></i></span>
						<%= f.email_field :email, hide_label: :true, class: "input-lg", autofocus: true, placeholder:  "email" %>
					</div>
					<span class="help-block"></span>
<br>
					<%= f.button "resend confirmation instructions", class: "btn btn-lg btn-primary btn-block", data: {disable_with: "<i class='fa fa-spinner fa-spin'></i> hold tight...."}  %>
            <br>
            <div class="text-center">
          <%= render "devise/shared/links" %>
        </div>
				</form>
			</div>
    </div>
	</div>
 <% end %>
</div>
