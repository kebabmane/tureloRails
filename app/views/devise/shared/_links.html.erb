<%- if controller_name != 'sessions' %>
  <%= link_to "log in", new_session_path(resource_name), class: "btn btn-info" %>
<% end -%>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <%= link_to "forgot your password?", new_password_path(resource_name), class: "btn btn-info" %>
<% end -%>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <%= link_to "didn't receive confirmation instructions?", new_confirmation_path(resource_name), class: "btn btn-info" %>
<% end -%>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to "didn't receive unlock instructions?", new_unlock_path(resource_name), class: "btn btn-info" %>
<% end -%>
